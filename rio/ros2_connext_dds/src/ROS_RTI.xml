<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/current/rti_dds_qos_profiles.xsd">

    <!-- Qos Library -->
    <qos_library name="ROS2_QOS">
        <qos_profile name="Default" base_name="BuiltinQosSnippetLib::QosPolicy.Reliability.BestEffort" is_default_qos="true">
      </qos_profile>
    </qos_library>

    <!-- types -->
    <types>
      <include file="Header.xml"/>
      <module name="sensor_msgs">
        <module name="msg">
          <module name="dds_">
            <struct name="Joy_">
              <member name="header" type= "nonBasic" nonBasicTypeName="std_msgs::msg::Header"/>
              <member name="axes" type="float32" sequenceMaxLength="100"/>
              <member name="buttons" type="int32" sequenceMaxLength="100"/>
            </struct>
          </module>
        </module>
      </module>
    </types>

    <!-- Domain Library -->
    <domain_library name="ROS2_DOMAIN_LIB">
        <domain name="ROS2_DOMAIN" domain_id="0">
            <register_type name="sensor_msgs::msg::dds_::Joy_" type_ref="sensor_msgs::msg::dds_::Joy_" />
            <topic name="rt/joystick_data" register_type_ref="sensor_msgs::msg::dds_::Joy_"/>
        </domain>
    </domain_library>

    <!-- <domain_participant_library name="ROS2_PARTICIPANT_LIB">
        <domain_participant name="publisher" domain_ref="ROS2_DOMAIN_LIB:ROS2_DOMAIN">
            <publisher name="Joy_stick_data_publisher">
                <data_writer name="Joy_stick_data_writer" topic_ref="rt/Joy_stick_data" />
            </publisher>
        </domain_participant> -->

    <!-- Participant library -->
    <domain_participant_library name="ROS2_PARTICIPANT_LIB">

      <domain_participant name="publisher" domain_ref="ROS2_DOMAIN_LIB::ROS2_DOMAIN">
        <publisher name="joystick_data_publisher">
          <data_writer name="joystick_data_writer" topic_ref="rt/joystick_data"/>
        </publisher>
      </domain_participant>

      <domain_participant name="subscriber" domain_ref="ROS2_DOMAIN_LIB::ROS2_DOMAIN">
        <subscriber name="rio_data_subscriber">
            <data_reader name="rio_data_reader" topic_ref="rt/joystick_data" />
        </subscriber>
      </domain_participant>

    </domain_participant_library>
</dds>